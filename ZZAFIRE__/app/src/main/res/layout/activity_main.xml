<?xml version="1.0" encoding="utf-8"?>
<GridLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	tools:context="com.superdroid.test.zzafire.MainActivity"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:rowCount="2"
	android:columnCount="1">

	<ImageView
		android:id="@+id/imageView_logo"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="32dp"
		android:layout_row="0"
		android:layout_column="0"
		android:src="@drawable/logo"/>

	<RelativeLayout
		android:padding="16dp"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="32dp"
		android:layout_row="1"
		android:layout_column="0">

		<Button
			android:id="@+id/button_data"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentStart="true"
			android:layout_below="@+id/button_profile"
			android:background="@android:color/holo_orange_light"
			android:text="데이터\n보기"
			android:onClick="mOnClick_Data"/>

		<Button
			android:id="@+id/button_profile"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:background="@android:color/holo_orange_light"
			android:text="닉네임\n관리"
			android:onClick="mOnClick_Rename"/>

		<Button
			android:id="@+id/button_wd"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentEnd="true"
			android:layout_below="@+id/button_profile"
			android:background="@android:color/holo_orange_light"
			android:text="WD기기\n연결"
			android:onClick="mOnClick_WD"/>
	</RelativeLayout>
</GridLayout>