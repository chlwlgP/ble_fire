<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignBaseline="@+id/btn_connect"
        android:layout_alignBottom="@+id/btn_connect" />

    <TextView
        android:id="@+id/text_rssi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="rssi"
        android:textColor="@color/abc_btn_colored_borderless_text_material"
        android:layout_below="@+id/text_name"
        android:layout_alignParentStart="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="비연결"
        android:id="@+id/text_connect"
        android:layout_marginEnd="27dp"
        android:layout_alignBottom="@+id/text_name"
        android:layout_toStartOf="@+id/btn_connect" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="연결"
        android:id="@+id/btn_connect"
        android:layout_gravity="right"
        android:textColor="@color/primary_dark_material_dark"
        android:textAllCaps="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="26dp"
        android:autoText="false" />

</RelativeLayout>