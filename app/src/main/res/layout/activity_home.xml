<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.zzafire.home">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="짜파이어 project"
        android:id="@+id/txt_home"
        android:layout_marginTop="46dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:fontFamily="@string/abc_capital_on"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/txt_home"
        android:layout_alignParentStart="true"
        android:layout_marginTop="146dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WD기기조회"
            android:id="@+id/btn_WD"
            android:background="@android:color/holo_orange_light"
            android:layout_above="@+id/btn_data"
            android:layout_centerHorizontal="true"
            android:onClick="mOnClick_WD"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="데이터조회"
            android:id="@+id/btn_data"
            android:background="@android:color/holo_orange_light"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/btn_WD"
            android:onClick="mOnClick_Data" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="프로파일관리"
            android:id="@+id/btn_profile"
            android:background="@android:color/holo_orange_light"
            android:layout_alignTop="@+id/btn_data"
            android:layout_toEndOf="@+id/btn_WD"
            android:onClick="mOnClick_Profile" />
    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/stew"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txt_home" />

</RelativeLayout>
